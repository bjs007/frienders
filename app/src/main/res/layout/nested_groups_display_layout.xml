<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"

    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/nested_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:gravity="start"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/nested_group_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAlignment="textStart"
                android:textColor="#828687"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:gravity="start"


                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/nested_subscribe_group_button"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:background="@color/transparent_black"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"


                    />

                <Button
                    android:id="@+id/nested_enter_into_group_button"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@color/transparent_black"
                    android:text="@string/view_group"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_height="1dp"
                android:background="@color/colorGray" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>