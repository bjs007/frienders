<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/group_message_receiver_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingLeft="4dp"
        android:textColor="@color/colorBlue"
        android:layout_marginTop="5dp"
        android:src="@drawable/profile_image"
        />

    <TextView
        android:id="@+id/group_receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/group_message_receiver_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:text="receiver message here"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/group_sender_message_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorBlue"
        android:paddingRight="4dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/profile_image"
        />

    <ImageView
        android:id="@+id/group_message_sender_doc_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/image_icon"
        android:layout_below="@id/group_sender_message_profile_image"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/group_message_sender_doc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:text="File name"
        android:visibility="gone"
        android:layout_below="@id/group_message_sender_doc_view"


        />

    <ImageView
        android:id="@+id/group_message_sender_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/image_icon"
        android:layout_below="@id/group_sender_message_profile_image"
        android:layout_marginRight="43dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:visibility="gone"/>




    <ImageView
        android:id="@+id/group_message_receiver_image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/image_icon"
        android:layout_marginLeft="4dp"
        android:layout_below="@id/group_message_receiver_profile_image"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/group_message_receiver_doc_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/image_icon"
        android:layout_below="@id/group_message_receiver_profile_image"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/group_message_receiver_doc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:text="File name"
        android:layout_below="@id/group_message_receiver_doc_view"
        android:scaleType="centerCrop"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/group_sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/group_receiver_message_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/group_sender_message_profile_image"
        android:layout_toStartOf="@id/group_message_sender_image_view"
        android:background="@drawable/sender_message_layout"
        android:padding="10dp"
        android:text="sender message here"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/groupVideoViewReceiver"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/image_icon"
        android:layout_marginLeft="4dp"
        android:visibility="gone"
        android:layout_below="@id/group_message_receiver_profile_image"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/groupVideoViewSender"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/image_icon"
        android:layout_below="@id/group_sender_message_profile_image"
        android:layout_marginRight="43dp"
        android:visibility="gone"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/groupvideomessageplayiconReceiver"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/play_icon"
        android:layout_below="@id/group_message_receiver_profile_image"
        android:scaleType="centerInside"
        android:adjustViewBounds="true" />


    <ImageView
        android:id="@+id/groupvideomessageplayiconSender"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/play_icon"
        android:layout_below="@id/group_sender_message_profile_image"
        android:layout_toStartOf="@id/groupVideoViewSender"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"/>

</RelativeLayout>