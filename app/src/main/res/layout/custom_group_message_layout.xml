<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_sender_message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_image"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_receiver_message_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/profile_image"
        />

    <ImageView
        android:id="@+id/group_message_sender_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/group_message_receiver_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/group_receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/group_sender_message_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:padding="10dp"
        android:text="receiver message here"
        android:textSize="16sp"
        android:layout_toRightOf="@id/group_sender_message_profile_image" />

    <TextView
        android:id="@+id/group_sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/group_receiver_message_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_toStartOf="@id/group_message_sender_image_view"
        android:layout_toLeftOf="@id/group_message_sender_image_view"
        android:background="@drawable/sender_message_layout"
        android:padding="10dp"
        android:text="sender message here"
        android:textSize="16sp"
       />

</RelativeLayout>