    <ImageView
        android:id="@+id/groupVideoViewReceiver"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/image_icon"

        android:visibility="gone"
        android:layout_below="@id/group_message_receiver_profile_name"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/groupVideoViewSender"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/image_icon"
        android:layout_below="@id/group_sender_message_profile_name"

        android:visibility="gone"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/groupvideomessageplayiconReceiver"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/play_icon"
        android:layout_below="@id/group_message_receiver_profile_name"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:adjustViewBounds="true" />


    <ImageView
        android:id="@+id/groupvideomessageplayiconSender"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/play_icon"
        android:layout_below="@id/group_sender_message_profile_name"
        android:layout_toStartOf="@id/groupVideoViewSender"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:adjustViewBounds="true"/>

</RelativeLayout>